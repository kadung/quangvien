<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include('partial/head'); -%>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">Cửa hàng ốc vít</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active" >
            <a class="nav-link" href="/">Trang Chủ
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/gioi-thieu">Giới Thiệu</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/lien-he">Liên hệ</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">
        <%- include('partial/left-sidebar', { categories: categories }); -%>
      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9 pt-4">

        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/danh-muc/<%= product.categoryId %>">
                <%= categories.find(e => e.id === product.categoryId).name %>
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page"><%= product.id %></li>
          </ol>
        </nav>

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>            
            <% for(var i=1; i < product.imagesDetail.length; i++) { %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
            <% } %>
          </ol>

          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="<%= product.imagesDetail[0] %>" alt="slide 1">
            </div>
            <% for(var i=1; i < product.imagesDetail.length; i++) { %>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="<%= product.imagesDetail[i] %>" alt="slide <%= i+1 %>">
              </div>
            <% } %>
          </div>

          <% if (product.imagesDetail.length > 2) { %>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          <% } %>
        </div>

          <div class="card-body">
            <div class="d-flex justify-content-center">
              <form method="post" id="callback-form" class="form-inline ">
                <div class="form-group mx-sm-3 mb-2">
                  <input type="number" class="form-control" id="phone-number" placeholder="Nhập SĐT cần tư vấn">
                </div>
                <button id="callbackButton" type="submit" class="btn btn-primary mb-2">Gửi ngay</button>
                <br>
              </form>              
            </div>
            <p id="error-number" class="d-none text-center p-3 mb-2 bg-danger text-white">
              Số điện thoại không đúng vui lòng kiểm tra lại.
            </p>
            <p id="fail-call" class="d-none text-center p-3 mb-2 bg-danger text-white">
              Đường truyền gặp sự cố, xin hãy thử lại.
            </p>
            <p id="success-call" class="d-none text-center p-3 mb-2 bg-success text-white">
              Chúng tôi sẽ gọi bạn.
            </p>

            <h3 class="card-title" id="product-name"><%= product.name %></h3>
            <p class="card-text"><%= product.description %></p>
          </div>
          
          <!-- TODO
          <div class="card-footer">
            <h2>Sản phẩm tương tự:</h2>
          </div> -->

        </div>
        <!-- /.card -->       

      </div>
      <!-- /.col-lg-9 -->

    </div>

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <%- include('partial/footer'); -%>

</body>

</html>
